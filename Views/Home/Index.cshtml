<script>
    var buildStars = function (reviewrating) {
        const maximumStars = 5;
        var rating = parseInt(reviewrating);
        var stars = "";
        for (var j = 1; j <= rating; j++) {
            stars += '<i class="fas fa-star" style="color:gold"></i>';
        }
        if (reviewrating.toString().indexOf('.') != -1) {
            stars += '<i class="fas fa-star-half-alt"  style="color:gold"></i>'
        }
        if (Math.round(reviewrating) < maximumStars) {
            for (var i = 0; i < maximumStars - Math.round(reviewrating); i++) {
                stars += '<i class="fas fa-star" ></i>';
            }
        }

        return "<div class=\"review-wrapper\"><div class=\"single-review\"><div class=\"review-img\">" +
            "</div><div class=\"rating-product\">" + stars +
            "</div></div></div></div></div>";
    }
    $("#show-review").click(function () {
        $.ajax({
            url: '/Home/GenerateReview',
            type: 'GET',
            dataType: 'json',
            cors: true,
            contentType: 'application/json',
            secure: true,
            headers: {
                'Access-Control-Allow-Origin': '*',
            },
            error: function (xhr, textStatus, errorThrown) {
                console.log('Error in Operation');
            },
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                console.log(data);
                $('#card-review').show();
                $('#reviewText').text(data.reviewText);
                $('#reviewerName').text(data.reviewerName);
                $('#reviewTime').text(data.reviewTime);
                $('#stars').html(buildStars(data.overall));
            }
        });
    });
